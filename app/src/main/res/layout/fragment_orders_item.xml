<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="10dp"
        android:layout_margin="8dp">
        <RelativeLayout
            android:id="@+id/cardRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/usernameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/orderNoTv"
                android:textColor="@android:color/black"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/orderNoTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:maxWidth="120dp"
                android:textColor="@android:color/black"
                android:padding="8dp"/>
            <TextView
                android:id="@+id/timeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="8dp"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_below="@+id/usernameTv"/>
            <LinearLayout
                android:id="@+id/hll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginLeft="4dp"
                android:layout_margin="4dp"
                android:layout_below="@+id/timeTv">
                <RelativeLayout
                    android:id="@+id/noitemRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/blue_300"
                    android:layout_margin="4dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/noitemtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="# of items"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/noitem_placedtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/noitemtv"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/amountRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/indigo_300"
                    android:layout_margin="4dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/cashtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total amount"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/cash_placedtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cashtv"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/typeRl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/purple_300"
                    android:layout_margin="4dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/typetv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Payment Type"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/type_placedtv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/typetv"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/hll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/hll">
                <Button
                    android:id="@+id/acceptBt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/green_800"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:visibility="visible"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/rejectBt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/red_800"
                    android:text="Reject"
                    android:layout_margin="4dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/accrejTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:visibility="gone"
                    android:layout_margin="4dp"
                    android:textStyle="bold|italic"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@+id/hll2">
            <TextView
                android:id="@+id/movetv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="More"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textColor="@color/blue_600"
                android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>